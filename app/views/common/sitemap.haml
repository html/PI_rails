!!! XML
%sitemapindex{ :xmlns => sitemap_xmlns }
  %sitemap 
    %loc
      = url_for( :controller => :articles, :action => :sitemap )
    %lastmod
      = w3c_date Article.last_modified
  %sitemap
    %loc
      = url_for :controller => :map, :action => :sitemap
    %lastmod
      = w3c_date(mtime_of :controller => :map, :action => :index)
  %urlset{ :xmlns => sitemap_xmlns(:siteindex) }
    %url
      %loc
        = url_for :controller => :map, :action => :index
      %lastmod
        = mtime_of :controller => :map, :action => :index
